<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.report_generator.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" top="20.0"/>
  </padding>

  <left>
      <VBox>
          <HBox spacing="10">
              <padding>
                  <Insets bottom="10.0" left="10.0"/>
              </padding>
              <Button fx:id="buttonSelectCSV" onAction="#onActionChooser" prefWidth="125"/>
              <Button fx:id="buttonExportPDF" onAction="#onExportPDF" prefWidth="125"/>
              <ComboBox fx:id="comboBoxLanguage" prefWidth="100"/>
          </HBox>

          <HBox spacing="10">
              <padding>
                  <Insets bottom="10.0" left="10.0" top="10.0"/>
              </padding>
              <TextField fx:id="textFieldName" prefWidth="150"/>
              <ComboBox fx:id="comboBoxCity" prefWidth="100"/>
              <Button fx:id="buttonApplyFilters" onAction="#applyFilter" prefWidth="100"/>
          </HBox>

          <TableView fx:id="tableView">
              <columns>
                  <TableColumn fx:id="tableColumnName" prefWidth="115"/>
                  <TableColumn fx:id="tableColumnEmail" prefWidth="150"/>
                  <TableColumn fx:id="tableColumnCity" prefWidth="115"/>
              </columns>
          </TableView>

          <HBox>
              <padding>
                  <Insets bottom="10.0" left="10.0" top="10.0"/>
              </padding>
              <Label fx:id="labelCustomers"/>
              <Label fx:id="labelTotalCustomers"/>
          </HBox>
      </VBox>
  </left>

    <right>
        <BorderPane fx:id="chartPane" xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="400"/>
    </right>

</BorderPane>
